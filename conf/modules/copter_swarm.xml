<!DOCTYPE module SYSTEM "module.dtd">

<module name="copter_swarm">
  <doc>
    <description>
	Module that takes other copters GPS data to create swarm behaviour.
    </description>
  </doc>
  <header>
    <file name="copter_swarm.h"/>
  </header>
  <init fun="copter_swarm_init()"/>
  <periodic fun="copter_swarm_periodic()" freq="10"/>
  <datalink message="COPTER_GPS" fun="copter_gps_action()"/>
  <makefile>
    <file name="copter_swarm.c"/>
  </makefile>
</module>

