<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1" ground_alt="0" lat0="52 7 13.92" lon0="11 37 39.45" max_dist_from_home="150" name="Rotorcraft Basic (Enac)" security_height="0">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0" alt="0.6"/>
    <waypoint name="CLIMB" x="0.0" y="5.0"/>
    <waypoint name="HOVER" x="-2.0" y="-5.0"/>
  </waypoints>

<variables>
	<variable var="hover_height" init="1" min="0." max="10." step="0.1" shortname="Hover Height" />
	<variable var="hover_time" init="30" min="10" max="300" step="1" shortname="Hover Time" />
</variables>

  <blocks>
	<!-- WAIT FOR GPS FIX-->
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>

	<!-- SET CURRENT POSITION TO GPS SIGNAL-->
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call_once fun="NavSetGroundReferenceHere()"/>
      <call_once fun="NavSetAltitudeReferenceHere()"/>
    </block>

	<!-- WAIT HERE UNTIL MANUAL STARTING-->
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>

	<!-- START THE ENGINE-->
    <block name="Start Engine">
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>

	<!-- FLY TO POINT ABOVE-->
    <block name="Takeoff">
      <exception cond="stateGetPositionEnu_f()->z > hover_height" deroute="Wait"/>
      <call_once fun="NavSetWaypointHere(WP_HOME)"/>
      <stay vmode="climb" climb="hover_height" wp="HOME"/>
    </block>

	<!-- WAIT AT POINT-->
    <block name="Wait">
	<call_once fun="NavSetWaypointHere(WP_HOVER)"/>	
	<stay wp="HOVER" until="stage_time > hover_time"/>
    </block>

	<!-- LAND AGAIN-->
    <block name="Land">
      <exception cond="NavDetectGround()" deroute="landed"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call_once fun="NavStartDetectGround()"/>
      <stay climb="-0.2" vmode="climb" wp="HOME"/>
    </block>

    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
  </blocks>
</flight_plan>
